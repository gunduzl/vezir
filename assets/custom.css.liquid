/* ============================== */
/*            TOKENS              */
/* ============================== */
:root {
  /* Brand */
  --brand-primary: #6366f1;  /* Primary blue color */
  --brand-accent:  #8b5cf6;  /* Accent purple color */

  /* Text & Surfaces */
  --text:          #1c1f24;   /* Dark text */
  --text-muted:    #5a6270;   /* Muted text */
  --bg:            #ffffff;   /* White background */
  --bg-subtle:     #f7f8fa;   /* Subtle off-white background */
  --card:          #ffffff;   /* White card background */
  --border:        #e6e9ef;   /* Soft border color */

  /* Feedback */
  --sale:          #e84118;   /* Red for sales */
  --badge-start:   #ff6b6b;
  --badge-end:     #ee5a24;

  /* Effects */
  --shadow-sm:     0 2px 8px rgba(0,0,0,.06);   /* Small shadow */
  --shadow-md:     0 6px 20px rgba(0,0,0,.10);  /* Medium shadow */
  --radius:        12px;          /* Border radius */
  --radius-sm:     8px;           /* Smaller border radius */
  --transition:    all .25s ease; /* Smooth transition */

  /* Typography */
  --font:          'Inter', 'Segoe UI', system-ui, -apple-system, Roboto, sans-serif;

  /* Focus */
  --focus:         rgba(99, 102, 241, .35);   /* Focus ring color */
}

/* ============================== */
/*           BASE RESET           */
/* ============================== */
*,
*::before,
*::after { box-sizing: border-box; }

html, body {
  padding: 0; margin: 0;
  background: var(--bg);
  color: var(--text);
  font-family: var(--font);
  line-height: 1.6;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  overflow-x: hidden;
  max-width: 100vw;
}

/* Links */
a {
  color: var(--brand-primary);
  text-decoration: none;
  transition: color .15s ease, opacity .15s ease;
}
a:hover { color: var(--brand-accent); }

/* Containers */
.container, .page-width, .wrapper {
  width: min(1200px, 100%);
  margin-inline: auto;
  padding-inline: clamp(12px, 3vw, 24px);
}

/* ============================== */
/*            BUTTONS             */
/* ============================== */
button, .btn, .button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: .5rem;
  padding: 12px 20px;
  border: 0;
  border-radius: var(--radius-sm);
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-accent));
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  transition: transform .15s ease, box-shadow .2s ease, opacity .2s ease;
  box-shadow: var(--shadow-sm);
}
button:hover, .btn:hover, .button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}
button:active, .btn:active, .button:active {
  transform: translateY(0);
  opacity: .9;
}

/* Ghost / Secondary variant */
.btn--ghost, .button--ghost {
  background: transparent;
  color: var(--text);
  border: 1px solid var(--border);
}
.btn--ghost:hover { background: var(--bg-subtle); }

/* ============================== */
/*             CARDS              */
/* ============================== */
.card, .card-wrapper, .product-card {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
  overflow: hidden;
}
.card:hover, .card-wrapper:hover, .product-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
}

/* ============================== */
/*        PRICE & BADGES          */
/* ============================== */
.price, .product__price, .product-single__price {
  font-weight: 700;
  color: var(--text);
}
.price--on-sale, .badge--sale { color: var(--sale); }

.badge, .product-badge {
  position: absolute;
  top: 10px; right: 10px;
  background: linear-gradient(135deg, var(--badge-start), var(--badge-end));
  color: #fff;
  padding: 6px 12px;
  border-radius: 999px;
  font-size: .8rem;
  font-weight: 700;
  box-shadow: var(--shadow-sm);
}

/* ============================== */
/*         HEADER & FOOTER        */
/* ============================== */
.header, .site-header {
  background: rgba(255,255,255,.92);
  backdrop-filter: blur(8px);
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}
.site-footer, .footer {
  background: linear-gradient(135deg, #2c3e50, #34495e);
  color: #fff;
  padding: 40px 0;
}

/* Header */
.site-header {
  padding: 20px 0;
  background: rgba(255, 255, 255, 0.92);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.site-footer {
  background: linear-gradient(135deg, #0f1217, #171c24);
  color: #fff;
  padding: 40px 0;
}

/* ============================== */
/*              FORMS             */
/* ============================== */
input, textarea, select {
  width: 100%;
  padding: 12px 14px;
  background: var(--bg);
  color: var(--text);
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  transition: border-color .15s ease, box-shadow .15s ease, background .2s ease;
}
input::placeholder, textarea::placeholder { color: var(--text-muted); }
input:focus, textarea:focus, select:focus {
  border-color: var(--brand-primary);
  box-shadow: 0 0 0 .2rem var(--focus);
  outline: 0;
}

/* ============================== */
/*            TOOLTIP             */
/* ============================== */
[data-tooltip] { position: relative; }
[data-tooltip]:hover::after {
  content: attr(data-tooltip);
  position: absolute;
  bottom: calc(100% + 8px);
  left: 50%;
  transform: translateX(-50%);
  background: #111;
  color: #fff;
  padding: 8px 10px;
  border-radius: 8px;
  font-size: .8rem;
  white-space: nowrap;
  z-index: 10;
}

/* ============================== */
/*           SCROLLBAR            */
/* ============================== */
::-webkit-scrollbar { width: 10px; height: 10px; }
::-webkit-scrollbar-track { background: var(--bg-subtle); }
::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, var(--brand-primary), var(--brand-accent));
  border-radius: 999px;
}

/* ============================== */
/*           BREADCRUMBS          */
/* ============================== */
.breadcrumb {
  display: flex; flex-wrap: wrap; gap: .5rem;
  margin: 1rem 0;
}
.breadcrumb a { color: var(--brand-primary); }
.breadcrumb a:hover { color: var(--brand-accent); }

/* ============================== */
/*        LOGO                   */
/* ============================== */
img.logo { transition: filter .25s ease; }

/* ============================== */
/* PRODUCT PAGE SPECIFIC STYLES */
/* ============================== */
/* TITLE */
html[data-template="product"] .product__title,
html[data-template="product"] h1.product__title,
html[data-template="product"] .product-single__title,
html[data-template="product"] .product-title,
html[data-template="product"] .sf-prod__title,
html[data-template="product"] .m-product-title,
html[data-template="product"] .m-product-title h1,
html[data-template="product"] .product__info-container h1 {
  background: none !important;
  color: #000 !important; /* Light Mode */
}

/* Prevent gradient styling on product titles */
html[data-template="product"] .product__title [style*="background"],
html[data-template="product"] .product__title [style*="-webkit-text-fill-color"],
html[data-template="product"] .product__title * {
  background: none !important;
  -webkit-text-fill-color: currentColor !important;
}

/* Product meta text colors */
html[data-template="product"] .product__info,
html[data-template="product"] .product__text,
html[data-template="product"] .product__accordion,
html[data-template="product"] .product__tax,
html[data-template="product"] .product__sku,
html[data-template="product"] .product__vendor {
  color: var(--text-muted);
}

/* ============================== */
/*       RESPONSIVE STYLES        */
/* ============================== */
@media (max-width: 1024px) {
  .grid { gap: 20px; }
}

@media (max-width: 768px) {
  h1 { font-size: clamp(1.6rem, 4.5vw, 2rem); }
  .btn, .button { padding: 10px 16px; }
}

/* ============================== */
/* ANNOUNCEMENT BAR              */
/* ============================== */
.announcement-bar {
  background-color: #111111 !important;  /* Dark background */
  color: #ffffff !important;  /* White text */
}

.announcement-bar a {
  color: #ffffff !important;  /* Link color */
}

.announcement-bar a:hover {
  color: #6366f1 !important;  /* Hover effect */
}
/* ============================== */
/*            TEXT ALIGNMENT      */
/* ============================== */

/* Headings (h1, h2, h3, h4, h5, h6) */
h1, h2, h3, h4, h5, h6 {
  margin: 0 0 15px 0;  /* Vertical space between headings */
  font-weight: 700;
  letter-spacing: -0.015em;
  color: var(--text);
  line-height: 1.2;
}

/* Paragraphs */
p {
  margin: 0 0 1.5rem 0; /* Spacing between paragraphs */
  color: var(--text-muted);
  font-size: 1rem;
  line-height: 1.6;
}

/* General Text */
.text, .text-muted, .product__description, .product__info, .product__text, .product__tax {
  line-height: 1.6;
  color: var(--text);
  margin: 0 0 1.5rem 0; /* Add spacing at the bottom of paragraphs */
}

/* Links (within paragraphs and product descriptions) */
a {
  color: var(--brand-primary);
  text-decoration: none;
  transition: color .15s ease, opacity .15s ease;
}
a:hover {
  color: var(--brand-accent);
}

/* ============================== */
/*            WRAPPER & GRID      */
/* ============================== */

/* Ensure consistent spacing and padding */
.container, .page-width, .wrapper {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* ============================== */
/*           PRODUCT PAGE STYLES  */
/* ============================== */

/* Product Title */
.product__title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--text);
  line-height: 1.3;
}

/* Product Description (increased spacing) */
.product__description {
  color: var(--text-muted);
  margin: 0 0 2rem 0;
  line-height: 1.6;
}

/* ============================== */
/*       MOBILE VIEW ADJUSTMENTS  */
/* ============================== */

@media (max-width: 768px) {
  h1, h2, h3, h4, h5, h6 {
    font-size: clamp(1.6rem, 4.5vw, 2rem);
    margin-bottom: 1rem;
  }

  .product__title {
    font-size: 1.8rem;
  }

  .product__description {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  p {
    font-size: 0.95rem;
    margin-bottom: 1.2rem;
  }
}

/* ============================== */
/*       CONSISTENT LINE HEIGHT   */
/* ============================== */
body, p, span, div, h1, h2, h3, h4, h5, h6 {
  line-height: 1.6;
}

/* ============================== */
/*         IMPROVED TEXT WRAPPING  */
/* ============================== */
.product__text, .product__info, .product__sku {
  word-wrap: break-word;  /* Break long words and keep text from overflowing */
  white-space: normal;    /* Ensure text wraps naturally */
  margin-bottom: 1.5rem;
}

/* ============================== */
/*        ADDITIONAL STYLES FOR PRODUCT PAGES */

